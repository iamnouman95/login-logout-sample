@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<!-- Login Modal-->
<div id="login" tabindex="-1" role="dialog" aria-hidden="true" class="modal fade bd-example-modal-lg">
    <div role="document" class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header border-bottom-0">
                <button type="button" data-dismiss="modal" aria-label="Close" class="close"><span aria-hidden="true">×</span></button>
            </div>
            <div class="modal-body p-4 p-lg-5">
                <form id="loginForm" method="post" class="login-form text-left">
                    <div class="form-group mb-4">
                        <label>Username</label>
                        <input id="Username" name="Username" placeholder="Username" class="form-control" data-container="body" data-placement="top" data-content="Username cannot include: \ / , . ^">
                    </div>
                    <div class="form-group mb-4">
                        <label>Password</label>
                        <input id="Password" type="password" name="Password" placeholder="Password" class="form-control" data-container="body" data-placement="top" data-content="Username cannot include: \ / , . ^">
                    </div>
                    <div style="margin-bottom: 20px;">
                        <span id="err" style="display: none; font-style:italic; font-weight:bold; color:red; font-size:small"></span>
                    </div>

                    <div class="form-group">
                        <input id="btnLogin" type="submit" value="Login" class="btn btn-primary">
                        <img id="loader" src="~/Utilities/img/loading.gif" style="display:none" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Hero Section-->
<section class="hero">
    <div class="container mb-5">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="hero-heading mb-0">Expand <br>possibilities and dimensions! </h1>
                <div class="row">
                    <div class="col-lg-10">
                        <p class="lead text-muted mt-4 mb-4">Our community provides the best experience!</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6"><img src="~/Utilities/img/illustration-hero.svg" alt="..." class="hero-image img-fluid d-none d-lg-block"></div>
        </div>
    </div>
</section>
